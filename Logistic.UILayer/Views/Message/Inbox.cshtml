@using Logistic.UILayer.Models
@model List<TblMessage>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/NewAdminLayout.cshtml";
}

<h2>Inbox</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Sender</th>
        <th>Subject</th>
        <th>Date</th>
        <th>Delete</th>
        <th>Open Message</th>
    </tr>
    @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MessageID</td>
                    <td>@item.SenderName</td>
                    <td>@item.MessageSubject</td>
                    <td>@item.MessageDate</td>
                    <td><a href="#" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Open Message</a></td> 
                </tr>
            }
</table>