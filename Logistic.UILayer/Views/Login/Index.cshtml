
@{
    Layout = null;
}



<!DOCTYPE HTML>
<html>
<head>
    @Html.Partial("PartialHead")
</head>

<body>
    <h1>Sign in</h1>
    <div class="login">
        <div class="login-bottom">
            <form method="post">
                <div class="text">
                    <input type="text" placeholder="Please write mail " required="" name="CustomerMail" />
                    <span class="men"></span>
                    <div class="clear"> </div>
                </div>
                <div class="text">
                    <input type="password" placeholder="Password..." required="" name="CustomerPassword" />
                    <span class="pass"></span>
                    <div class="clear"> </div>
                </div>
                <div class="remember">
                    <div class="remember-top">
                        <a href="/Register/Index/">Create Account</a>
                    </div>
                    <div class="send">
                        <input type="submit" value="Sign In">
                    </div>
                    <div class="clear"> </div>
                </div>
            </form>
        </div>
    </div>
    <div class="copy-right">
        <p>© @DateTime.Now.Year LogisticsPool Admin Sign-in. All Rights Reserved | Design by  <a href="http://w3layouts.com/" target="_blank">  W3layouts </a></p>
    </div>
</body>
</html>

